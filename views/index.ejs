<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #222;
            color: #fff;
        }

        h1 {
            color: #fff;
            text-align: center;
            margin: 20px 0;
        }

        .file-list {
            margin: 20px auto;
            padding: 0;
            list-style-type: none;
            max-width: 600px;
        }

        .file-item {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 5px;
            padding: 10px;
        }

        .file-item span {
            font-size: 16px;
        }

        .file-item a {
            margin-left: 10px;
            text-decoration: none;
            color: #00ff7f;
        }

        .file-item a:hover {
            text-decoration: underline;
        }

        button {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            background-color: #00ff7f;
            color: #000;
            cursor: pointer;
        }

        button:hover {
            background-color: #00cc66;
        }

        .empty-message {
            text-align: center;
            color: #ccc;
        }
    </style>
</head>
<body>
    <h1>DocuBox</h1>

    <form action="/">
        <% if (files.length > 0) { %>
            <ul class="file-list">
                <% files.forEach(function(file) { %>
                    <li class="file-item">
                        <span><%= file %></span>
                        <span>
                            <a href="/edit/<%= file %>">Read and Edit</a>
                            <a href="/delete/<%= file %>" onclick="return confirm('Are you sure you want to delete this file?');">Delete</a>
                        </span>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <h3 class="empty-message">Currently nothing to show, create hisaabs to see something.</h3>
        <% } %>
    </form>

    <a href="/create"><button>Create New File</button></a>
</body>
</html>
